@model IEnumerable<Ressential.Models.ProductCategory>

@{ ViewBag.Title = "CategoryList";
    Layout = "~/Views/Shared/_KitchenLayout.cshtml"; }



<div class="card">
    <div class="card-body">
        @if (TempData["ErrorMessage"] != null)
        {
<div class="alert alert-danger">
    @TempData["ErrorMessage"]
</div>}
        @if (TempData["SuccessMessage"] != null)
        {
<div class="alert alert-success">
    @TempData["SuccessMessage"]
</div>}
        <div class="row">
            <div class="col-md-3">
                <div class="input-group input-group-sm mb-3">
                    <select class="form-select" id="actionDropdown" aria-label="Select action">
                        <option selected>Choose Action</option>
                        <option value="delete">Delete</option>
                    </select>
                    <button class="btn btn-secondary" type="button" onclick="applyAction()">Apply</button>
                </div>
            </div>

            <div class="col-md-3 ms-auto">
                <form id="searchForm" action="@Url.Action("CategoryList", "Kitchen")" method="get">
                    <div class="input-group input-group-sm mb-3">
                        <input type="text" name="search" class="form-control" id="floatingInput" placeholder="Search" value="@Request.QueryString["search"]">
                        <button class="btn btn-secondary" type="submit"><i class="fas fa-search"></i></button>
                    </div>
                </form>
            </div>
        </div>

        <div class="table-responsive">
            <form id="actionForm" action="@Url.Action("DeleteSelectedCategory", "Kitchen")" method="post">
                <table class="table table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th scope="col" class="fit-content">
                                <input class="form-check-input" type="checkbox" id="selectAll" onclick="toggleAll(this)" aria-label="Select all">
                            </th>
                            <th scope="col">Category Name</th>
                            <th scope="col">Description</th>
                            <th scope="col" class="fit-content">Option</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
            <tr>
                <td><input type="checkbox" class="form-check-input item-checkbox" name="selectedItems" value="@item.ProductCategoryId" aria-label="Select item"></td>
                <td>@item.ProductCategoryName</td>
                <td>@item.Description</td>
                <td>
                    <div class="dropdown">
                        <button class="btn" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false" style="background: none; border: none;">
                            <i class="bi bi-three-dots-vertical" style="font-size: 1.5rem;"></i>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <li><button class="dropdown-item" type="button" onclick="submitEditForm(@item.ProductCategoryId)"><i class="bi bi-pencil" style="font-size: 1.25rem;"></i> Edit</button></li>
                            <li><button class="dropdown-item" type="button" onclick="submitDeleteForm(@item.ProductCategoryId)"><i class="bi bi-trash" style="font-size: 1.25rem;"></i> Delete</button></li>
                        </ul>
                    </div>
                </td>
            </tr>
}
                    </tbody>
                </table>
            </form>

            <!-- Hidden Form for Edit/Delete Actions -->
            <form id="editDeleteForm" method="post" style="display: none;">
                <input type="hidden" name="ProductCategoryId" id="formProductCategoryId" />
            </form>
        </div>
    </div>
</div>

<script>
    // Function to toggle all checkboxes
    function toggleAll(source) {
        const checkboxes = document.querySelectorAll('.item-checkbox');
        checkboxes.forEach(checkbox => checkbox.checked = source.checked);
    }

    function applyAction() {
        const action = document.getElementById("actionDropdown").value;
        const checkboxes = document.querySelectorAll('.item-checkbox:checked');

        if (action === "delete") {
            if (checkboxes.length === 0) {
                alert("No records selected to delete.");
                return;
            }
            if (confirm("Are you sure you want to delete the selected records?")) {
                document.getElementById("actionForm").submit();
            }
        }
    }

    function submitEditForm(ProductCategoryId) {
        const form = document.getElementById("editDeleteForm");
        form.action = "@Url.Action("EditCategory", "kitchen")";
        document.getElementById("formProductCategoryId").value = ProductCategoryId;
        form.method = "get";
        form.submit();
    }

    function submitDeleteForm(ProductCategoryId) {
        if (confirm('Are you sure you want to delete this record?')) {
            const form = document.getElementById("editDeleteForm");
            form.action = "@Url.Action("DeleteCategory", "Kitchen")";
            document.getElementById("formProductCategoryId").value = ProductCategoryId;
            form.method = "post";
            form.submit();
        }
    }
</script>