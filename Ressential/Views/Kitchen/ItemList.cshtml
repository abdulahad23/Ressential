
@{
    ViewBag.Title = "ItemList";
    Layout = "~/Views/Shared/_KitchenLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-3">
                <div class="input-group input-group-sm mb-3">
                    <select class="form-select" id="inputGroupSelectStart">
                        <option selected>Choose Action</option>
                        <option value="1">Create Requisition</option>
                        <option value="2">Create Consume</option>
                        <option value="3">Create Wastage</option>
                    </select>
                    <button class="btn btn-secondary" type="button">Apply</button>
                </div>
            </div>
            <div class="col-md-3 ms-auto">
                <div class="input-group input-group-sm mb-3">
                    <input type="text" class="form-control" id="floatingInput" placeholder="Search">
                    <button class="btn btn-secondary" type="button"><i class="fas fa-search"></i></button>
                </div>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="table-light">
                    <tr>
                        <th scope="col" class="fit-content">
                            <input class="form-check-input" type="checkbox" value="" id="selectAll" onclick="toggleAll(this)">
                        </th>
                        <th scope="col">Item Name</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Unit</th>
                        <th scope="col">MSL</th>
                        <th scope="col">Stock Level</th>
                        <th scope="col" class="fit-content">Option</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><input type="checkbox" class="form-check-input"></td>
                        <td>Sugar</td>
                        <td>8</td>
                        <td>Kilogram</td>
                        <td>10</td>
                        <td>
                            <span style="background-color: red;color:white; border-radius:6px; padding:5px 10px 5px 10px; font-size: 0.8rem !important" class="label">
                                LOW
                            </span>
                        </td>
                        <td>
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                    Menu
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                    <li><a class="dropdown-item" href="#">Create Requisition</a></li>
                                    <li><a class="dropdown-item" href="#">Create Consume</a></li>
                                    <li><a class="dropdown-item" href="#">Create Wastage</a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td><input type="checkbox" class="form-check-input"></td>
                        <td>Potato</td>
                        <td>29</td>
                        <td>Kilogram</td>
                        <td>10</td>
                        <td>
                            <span style="background-color: #2b982b;color:white; border-radius:6px; padding:5px 10px 5px 10px; font-size: 0.8rem !important" class="label">
                                OK
                            </span>
                        </td>
                        <td>
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                    Menu
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                    <li><a class="dropdown-item" href="#">Create Requisition</a></li>
                                    <li><a class="dropdown-item" href="#">Create Consume</a></li>
                                    <li><a class="dropdown-item" href="#">Create Wastage</a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td><input type="checkbox" class="form-check-input"></td>
                        <td>Cooking Oil</td>
                        <td>25</td>
                        <td>Liter</td>
                        <td>10</td>
                        <td>
                            <span style="background-color: #2b982b;color:white; border-radius:6px; padding:5px 10px 5px 10px; font-size: 0.8rem !important" class="label">
                                OK
                            </span>
                        </td>
                        <td>
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                    Menu
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                    <li><a class="dropdown-item" href="#">Create Requisition</a></li>
                                    <li><a class="dropdown-item" href="#">Create Consume</a></li>
                                    <li><a class="dropdown-item" href="#">Create Wastage</a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td><input type="checkbox" class="form-check-input"></td>
                        <td>Beef Patty</td>
                        <td>5</td>
                        <td>Pieces</td>
                        <td>10</td>
                        <td>
                            <span style="background-color: red;color:white; border-radius:6px; padding:5px 10px 5px 10px; font-size: 0.8rem !important" class="label">
                                LOW
                            </span>
                        </td>
                        <td>
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                    Menu
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                    <li><a class="dropdown-item" href="#">Create Requisition</a></li>
                                    <li><a class="dropdown-item" href="#">Create Consume</a></li>
                                    <li><a class="dropdown-item" href="#">Create Wastage</a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>


<script>// Function to toggle all checkboxes
    function toggleAll(source) {
        const checkboxes = document.querySelectorAll('.form-check-input');
        checkboxes.forEach(checkbox => checkbox.checked = source.checked);
    }</script>


