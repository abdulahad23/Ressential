@model Ressential.Models.BranchItem
@{
    ViewBag.Title = "EditItem";
    Layout = "~/Views/Shared/_KitchenLayout.cshtml";
}


@using (Html.BeginForm("EditItem", "Kitchen", FormMethod.Post))
{
    <div class="row">
        <div class="col-12 grid-margin">
            <div class="card">
                <div class="card-body">
                    <h2 class="text-secondary"><b>Update Item</b></h2>
                    @Html.HiddenFor(model => model.BranchItemId)
                <div class="row">

                    <div class="col-md-6">
                        <div class="form-floating mb-3 mt-3">
                            @Html.DropDownListFor(m => m.ItemId, new SelectList(ViewBag.items, "ItemId", "ItemName"), "Select Item", new { @class = "form-control" })
                            <label for="ItemId">Item</label>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3 mt-3">
                            @Html.TextBoxFor(m => m.MinimumStockLevel, new { @class = "form-control", placeholder = "Minimum Stock Level", type = "number"})
                            <label for="floatingInput">Minimum Stock Level</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3 mt-3">
                            @Html.TextBoxFor(m => m.OpeningStockQuantity, new { @class = "form-control", placeholder = "Quantity In Hand", type = "number", @readonly = "readonly" })
                            <label for="floatingInput">Quantity In Hand</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3 mt-3">
                            @Html.TextBoxFor(m => m.OpeningStockValue, new { @class = "form-control", placeholder = "Stock Value", type = "number", @readonly = "readonly" })
                            <label for="floatingInput">Stock Value</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3 mt-3">
                            @Html.TextBoxFor(m => m.OpeningStockDate, Model.OpeningStockDate.ToString("yyyy-MM-dd"), new { @class = "form-control", @placeholder = "Opening Stock Date", @type = "date", @readonly = "readonly" })
                            <label for="floatingInput">Opening Stock Date</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3 mt-3">
                            @Html.DropDownListFor(m => m.IsActive, new SelectList(new[] {
                                        new { Value = true, Text = "Active" },
                                        new { Value = false, Text = "Inactive" }
                                    }, "Value", "Text"), new { @class = "form-control" })
                            <label for="floatingInput">Product Status</label>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class=" row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <div class="col-sm-9">
                                        <button type="submit" class="btn btn-secondary mr-2 ps-4 pe-4">Update</button>
                                        <a href="@Url.Action("ItemList","Kitchen")" class="btn btn-light ms-1 ps-4 pe-4">Cancel</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                </div>
            </div>

        </div>
    </div>}

