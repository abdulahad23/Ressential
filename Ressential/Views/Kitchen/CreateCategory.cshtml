@model Ressential.Models.ProductCategory

@{ ViewBag.Title = "CreateCategory";
    Layout = "~/Views/Shared/_KitchenLayout.cshtml"; }


@using (Html.BeginForm("CreateCategory", "Kitchen", FormMethod.Post))
{

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h2 class="text-secondary"><b>Create Category </b></h2>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3 mt-3">
                            @Html.TextBoxFor(model => model.ProductCategoryName, "", new { @class = "form-control", @placeholder = "Category Name" })
                            <label for="floatingInput">Category Name</label>
                            @Html.ValidationMessageFor(model => model.ProductCategoryName, "", new { @class = "text-danger" })


                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-floating mb-3 mt-3">
                            @Html.TextBoxFor(model => model.Description, "", new { @class = "form-control", @placeholder = "Description" })
                            <label for="floatingInput">Description</label>
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })

                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class=" row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <div class="col-sm-9">
                                        <button type="submit" class="btn btn-secondary mr-2 ps-4 pe-4">Save</button>
                                        <a href="@Url.Action("CategoryList", "Kitchen")" class="btn btn-light ms-1 ps-4 pe-4">Cancel</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>
</div>
}