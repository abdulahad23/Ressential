@model IEnumerable<Ressential.Models.SalesReportViewModel>
@{
    ViewBag.Title = "Sales Report";
    Layout = "~/Views/Shared/_KitchenLayout.cshtml";
}

<div class="container-fluid py-4">
    <!-- Page Heading with Breadcrumb -->
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Kitchen")">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Sales Report</li>
                </ol>
            </nav>
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-body d-flex align-items-center py-3">
                    <div class="bg-primary p-3 me-3 rounded-circle">
                        <i class="fas fa-cash-register text-white fa-2x"></i>
                    </div>
                    <div>
                        <h2 class="mb-1 text-primary fw-bold">Sales Report</h2>
                        <p class="text-muted mb-0">Generate detailed reports for sales and orders</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Section with Enhanced UI -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-filter me-2"></i>Report Filters</h5>
                </div>
                <div class="card-body">
                    <form id="salesFilterForm">
                        <div class="row g-3">
                            

                            <div class="col-md-6 col-lg-3">
                                <div class="form-group">
                                    <label for="OrderType" class="form-label fw-bold">
                                        <i class="fas fa-tags me-1 text-primary"></i>Order Type
                                    </label>
                                    <select id="OrderType" name="OrderType" class="form-select">
                                        <option value="">All Types</option>
                                        <option value="DineIn">Dine In</option>
                                        <option value="TakeAway">Take Away</option>
                                        <option value="Online">Online</option>
                                    </select>
                                    <div class="form-text">Filter by order type</div>
                                </div>
                            </div>

                            <div class="col-md-6 col-lg-3">
                                <div class="form-group">
                                    <label for="Status" class="form-label fw-bold">
                                        <i class="fas fa-tasks me-1 text-primary"></i>Status
                                    </label>
                                    <select id="Status" name="Status" class="form-select">
                                        <option value="0">All Status</option>
                                        <option value="Pending">Pending</option>
                                        <option value="Preparing">Preparing</option>
                                        <option value="Ready">Ready</option>
                                        <option value="Out for Delivery">Out for Delivery</option>
                                        <option value="Completed">Completed</option>
                                        <option value="Cancelled">Cancelled</option>
                                        <option value="Returned">Returned</option>
                                    </select>
                                    <div class="form-text">Filter by order status</div>
                                </div>
                            </div>

                            <div class="col-md-6 col-lg-3">
                                <div class="form-group">
                                    <label for="FromDate" class="form-label fw-bold">
                                        <i class="fas fa-calendar-alt me-1 text-primary"></i>From Date
                                    </label>
                                    <input type="date" id="FromDate" name="FromDate" class="form-control" />
                                    <div class="form-text">Start date for report period</div>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-3">
                                <div class="form-group">
                                    <label for="ToDate" class="form-label fw-bold">
                                        <i class="fas fa-calendar-alt me-1 text-primary"></i>To Date
                                    </label>
                                    <input type="date" id="ToDate" name="ToDate" class="form-control" />
                                    <div class="form-text">End date for report period</div>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-3">
                                <div class="form-group">
                                    <label for="Search" class="form-label fw-bold">
                                        <i class="fas fa-search me-1 text-primary"></i>Search
                                    </label>
                                    <input type="text" id="Search" name="Search" class="form-control" placeholder="Order No, Customer..." />
                                    <div class="form-text">Search by Order No, Customer</div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Report Type Selection -->
                        <div class="row mt-3">
                            <div class="col-12">
                                <div class="card border-light">
                                    <div class="card-header bg-light">
                                        <h6 class="mb-0"><i class="fas fa-file-alt me-2"></i>Report Type</h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="ReportType" id="summaryReport" value="summary" checked>
                                            <label class="form-check-label" for="summaryReport">
                                               Summary Report
                                            </label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="ReportType" id="detailReport" value="detail">
                                            <label class="form-check-label" for="detailReport">
                                                Detailed Report
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Action Buttons in filter section -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="d-flex justify-content-end">
                                    <button type="button" class="btn btn-light me-2" id="btnReset">
                                        <i class="fas fa-undo me-1"></i> Reset
                                    </button>
                                    <div class="btn-group me-2">
                                        <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="fas fa-download me-1"></i> Export
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li><button id="btnPDF" class="dropdown-item" type="button"><i class="fas fa-file-pdf text-danger me-2"></i>Export to PDF</button></li>
                                            <li><button id="btnExcel" class="dropdown-item" type="button"><i class="fas fa-file-excel text-success me-2"></i>Export to Excel</button></li>
                                        </ul>
                                    </div>
                                    <button type="button" class="btn btn-secondary" id="btnShow">
                                        <i class="fas fa-eye me-1"></i> Show
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Information Card -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Report Information</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info mb-0">
                        <i class="fas fa-lightbulb me-2"></i>
                        <span>The Sales Report shows all orders and sales from customers. Summary view shows order header information, while Detail view includes all products in each order.</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Set default date values (current month)
            var today = new Date();
            var firstDay = new Date(today.getFullYear(), today.getMonth(), 1);
            
            var fromDateStr = firstDay.toISOString().slice(0, 10);
            var toDateStr = today.toISOString().slice(0, 10);
            
            $('#FromDate').val(fromDateStr);
            $('#ToDate').val(toDateStr);
            
            // Prevent form submission on enter key
            $('#salesFilterForm').on('submit', function(e) {
                e.preventDefault();
                return false;
            });
            
            // Button click handlers
            $('#btnShow').click(function(e) {
                e.preventDefault();
                openReportInNewTab();
            });

            $('#btnPDF').click(function(e) {
                e.preventDefault();
                exportToPDF();
            });

            $('#btnExcel').click(function(e) {
                e.preventDefault();
                exportToExcel();
            });
            
            $('#btnReset').click(function() {
                $('#Search').val('');
                $('#OrderType').val('');
                $('#Status').val('0');
                $('#FromDate').val(fromDateStr);
                $('#ToDate').val(toDateStr);
                $('#summaryReport').prop('checked', true);
            });
        });

        function openReportInNewTab() {
            var search = $('#Search').val();
            var orderType = $('#OrderType').val();
            var fromDate = $('#FromDate').val();
            var toDate = $('#ToDate').val();
            var status = $('#Status').val();
            var reportType = $('input[name="ReportType"]:checked').val();

            // Validate dates
            if (fromDate && toDate && new Date(fromDate) > new Date(toDate)) {
                alert('From Date cannot be greater than To Date');
                return;
            }

            // Construct the URL with query parameters
            var url = '@Url.Action("GenerateSalesReport", "Kitchen")' +
                '?search=' + encodeURIComponent(search) +
                '&orderType=' + encodeURIComponent(orderType) +
                '&fromDate=' + encodeURIComponent(fromDate) +
                '&toDate=' + encodeURIComponent(toDate) +
                '&status=' + encodeURIComponent(status) +
                '&reportType=' + encodeURIComponent(reportType);

            // Open the URL in a new tab
            window.open(url, '_blank');
        }

        function exportToPDF() {
            var search = $('#Search').val();
            var orderType = $('#OrderType').val();
            var fromDate = $('#FromDate').val();
            var toDate = $('#ToDate').val();
            var status = $('#Status').val();
            var reportType = $('input[name="ReportType"]:checked').val();

            // Validate dates
            if (fromDate && toDate && new Date(fromDate) > new Date(toDate)) {
                alert('From Date cannot be greater than To Date');
                return;
            }

            // Construct the URL with query parameters
            var url = '@Url.Action("ExportSalesReportToPDF", "Kitchen")' +
                '?search=' + encodeURIComponent(search) +
                '&orderType=' + encodeURIComponent(orderType) +
                '&fromDate=' + encodeURIComponent(fromDate) +
                '&toDate=' + encodeURIComponent(toDate) +
                '&status=' + encodeURIComponent(status) +
                '&reportType=' + encodeURIComponent(reportType);

            // Redirect to the export URL
            window.location.href = url;
        }
        
        function exportToExcel() {
            var search = $('#Search').val();
            var orderType = $('#OrderType').val();
            var fromDate = $('#FromDate').val();
            var toDate = $('#ToDate').val();
            var status = $('#Status').val();
            var reportType = $('input[name="ReportType"]:checked').val();

            // Validate dates
            if (fromDate && toDate && new Date(fromDate) > new Date(toDate)) {
                alert('From Date cannot be greater than To Date');
                return;
            }

            // Construct the URL with query parameters
            var url = '@Url.Action("ExportSalesReportToExcel", "Kitchen")' +
                '?search=' + encodeURIComponent(search) +
                '&orderType=' + encodeURIComponent(orderType) +
                '&fromDate=' + encodeURIComponent(fromDate) +
                '&toDate=' + encodeURIComponent(toDate) +
                '&status=' + encodeURIComponent(status) +
                '&reportType=' + encodeURIComponent(reportType);

            // Redirect to the export URL
            window.location.href = url;
        }
    </script>
} 