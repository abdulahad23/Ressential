@model IEnumerable<Ressential.Models.CostReportViewModel>
@{
    ViewBag.Title = "Cost Report";
    Layout = "~/Views/Shared/_KitchenLayout.cshtml";
}

<div class="container-fluid py-4">
    <!-- Page Heading with Breadcrumb -->
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Kitchen")">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Cost Report</li>
                </ol>
            </nav>
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-body d-flex align-items-center py-3">
                    <div class="bg-primary p-3 me-3 rounded-circle">
                        <i class="fas fa-calculator text-white fa-2x"></i>
                    </div>
                    <div>
                        <h2 class="mb-1 text-primary fw-bold">Cost Report</h2>
                        <p class="text-muted mb-0">Generate detailed reports for sales, consume, and wastage costs</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Section with Enhanced UI -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-filter me-2"></i>Report Filters</h5>
                </div>
                <div class="card-body">
                    <form id="costFilterForm">
                        <div class="row g-3">
                            <!-- Search -->
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="Search" class="form-label">Search</label>
                                    <input type="text" class="form-control" id="Search" name="Search" placeholder="Search by reference no, item name, or type...">
                                </div>
                            </div>

                            <!-- Date Range -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="FromDate" class="form-label">From Date</label>
                                    <input type="date" class="form-control" id="FromDate" name="FromDate">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="ToDate" class="form-label">To Date</label>
                                    <input type="date" class="form-control" id="ToDate" name="ToDate">
                                </div>
                            </div>
                        </div>
                        
                        <!-- Report Type Selection -->
                        <div class="row mt-3">
                            <div class="col-12">
                                <div class="card border-light">
                                    <div class="card-header bg-light">
                                        <h6 class="mb-0"><i class="fas fa-file-alt me-2"></i>Report Type</h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="ReportType" id="summaryReport" value="summary" checked>
                                            <label class="form-check-label" for="summaryReport">
                                               Summary Report
                                            </label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="ReportType" id="detailReport" value="detail">
                                            <label class="form-check-label" for="detailReport">
                                                Detailed Report
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Action Buttons -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <button type="button" id="btnShow" class="btn btn-primary">
                                    <i class="fas fa-eye me-2"></i>Show Report
                                </button>
                                <button type="button" id="btnPDF" class="btn btn-danger">
                                    <i class="fas fa-file-pdf me-2"></i>Export to PDF
                                </button>
                                <button type="button" id="btnExcel" class="btn btn-success">
                                    <i class="fas fa-file-excel me-2"></i>Export to Excel
                                </button>
                                <button type="button" id="btnReset" class="btn btn-secondary">
                                    <i class="fas fa-undo me-2"></i>Reset
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Information Card -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Report Information</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info mb-0">
                        <i class="fas fa-lightbulb me-2"></i>
                        <span>The Cost Report shows all costs related to sales, consumed items, and wastage. Summary view shows daily totals, while Detail view includes individual transactions.</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Set default date values (current month)
            var today = new Date();
            var firstDay = new Date(today.getFullYear(), today.getMonth(), 1);
            
            var fromDateStr = firstDay.toISOString().slice(0, 10);
            var toDateStr = today.toISOString().slice(0, 10);
            
            $('#FromDate').val(fromDateStr);
            $('#ToDate').val(toDateStr);
            
            // Prevent form submission on enter key
            $('#costFilterForm').on('submit', function(e) {
                e.preventDefault();
                return false;
            });
            
            // Button click handlers
            $('#btnShow').click(function(e) {
                e.preventDefault();
                openReportInNewTab();
            });

            $('#btnPDF').click(function(e) {
                e.preventDefault();
                exportToPDF();
            });

            $('#btnExcel').click(function(e) {
                e.preventDefault();
                exportToExcel();
            });
            
            $('#btnReset').click(function() {
                $('#Search').val('');
                $('#FromDate').val(fromDateStr);
                $('#ToDate').val(toDateStr);
                $('#summaryReport').prop('checked', true);
            });
        });

        function openReportInNewTab() {
            var search = $('#Search').val();
            var fromDate = $('#FromDate').val();
            var toDate = $('#ToDate').val();
            var reportType = $('input[name="ReportType"]:checked').val();

            // Validate dates
            if (fromDate && toDate && new Date(fromDate) > new Date(toDate)) {
                alert('From Date cannot be greater than To Date');
                return;
            }

            // Construct the URL with query parameters
            var url = '@Url.Action("GenerateCostReport", "Kitchen")' +
                '?search=' + encodeURIComponent(search) +
                '&fromDate=' + encodeURIComponent(fromDate) +
                '&toDate=' + encodeURIComponent(toDate) +
                '&reportType=' + encodeURIComponent(reportType);

            // Open the URL in a new tab
            window.open(url, '_blank');
        }

        function exportToPDF() {
            var search = $('#Search').val();
            var fromDate = $('#FromDate').val();
            var toDate = $('#ToDate').val();
            var reportType = $('input[name="ReportType"]:checked').val();

            // Validate dates
            if (fromDate && toDate && new Date(fromDate) > new Date(toDate)) {
                alert('From Date cannot be greater than To Date');
                return;
            }

            // Construct the URL with query parameters
            var url = '@Url.Action("ExportCostReportToPDF", "Kitchen")' +
                '?search=' + encodeURIComponent(search) +
                '&fromDate=' + encodeURIComponent(fromDate) +
                '&toDate=' + encodeURIComponent(toDate) +
                '&reportType=' + encodeURIComponent(reportType);

            // Redirect to the export URL
            window.location.href = url;
        }
        
        function exportToExcel() {
            var search = $('#Search').val();
            var fromDate = $('#FromDate').val();
            var toDate = $('#ToDate').val();
            var reportType = $('input[name="ReportType"]:checked').val();

            // Validate dates
            if (fromDate && toDate && new Date(fromDate) > new Date(toDate)) {
                alert('From Date cannot be greater than To Date');
                return;
            }

            // Construct the URL with query parameters
            var url = '@Url.Action("ExportCostReportToExcel", "Kitchen")' +
                '?search=' + encodeURIComponent(search) +
                '&fromDate=' + encodeURIComponent(fromDate) +
                '&toDate=' + encodeURIComponent(toDate) +
                '&reportType=' + encodeURIComponent(reportType);

            // Redirect to the export URL
            window.location.href = url;
        }
    </script>
} 