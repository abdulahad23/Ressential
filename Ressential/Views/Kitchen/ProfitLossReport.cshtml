@{
    ViewBag.Title = "Profit & Loss Report";
    Layout = "~/Views/Shared/_KitchenLayout.cshtml";
}

<div class="container-fluid py-4">
    <!-- Page Heading with Breadcrumb -->
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Kitchen")">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Profit & Loss Report</li>
                </ol>
            </nav>
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-body d-flex align-items-center py-3">
                    <div class="bg-primary p-3 me-3 rounded-circle">
                        <i class="fas fa-chart-line text-white fa-2x"></i>
                    </div>
                    <div>
                        <h2 class="mb-1 text-primary fw-bold">Profit & Loss Report</h2>
                        <p class="text-muted mb-0">Generate comprehensive profit and loss statements</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Section with Enhanced UI -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-filter me-2"></i>Report Filters</h5>
                </div>
                <div class="card-body">
                    <form id="profitLossFilterForm">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="FromDate" class="form-label fw-bold">
                                        <i class="fas fa-calendar-alt me-1 text-primary"></i>From Date
                                    </label>
                                    <input type="date" id="FromDate" name="FromDate" class="form-control" />
                                    <div class="form-text">Start date for report period</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="ToDate" class="form-label fw-bold">
                                        <i class="fas fa-calendar-alt me-1 text-primary"></i>To Date
                                    </label>
                                    <input type="date" id="ToDate" name="ToDate" class="form-control" />
                                    <div class="form-text">End date for report period</div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Action Buttons in filter section -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="d-flex justify-content-end">
                                    <button type="button" class="btn btn-light me-2" id="btnReset">
                                        <i class="fas fa-undo me-1"></i> Reset
                                    </button>
                                    <div class="btn-group me-2">
                                        <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="fas fa-download me-1"></i> Export
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li><button id="btnPDF" class="dropdown-item" type="button"><i class="fas fa-file-pdf text-danger me-2"></i>Export to PDF</button></li>
                                            <li><button id="btnExcel" class="dropdown-item" type="button"><i class="fas fa-file-excel text-success me-2"></i>Export to Excel</button></li>
                                        </ul>
                                    </div>
                                    <button type="button" class="btn btn-secondary" id="btnShow">
                                        <i class="fas fa-eye me-1"></i> Show
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Information Card -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Report Information</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info mb-0">
                        <i class="fas fa-lightbulb me-2"></i>
                        <span>The Profit & Loss Report provides a comprehensive view of your financial performance, including revenue, costs, and profitability metrics. Use date filters to analyze performance over specific periods.</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Set default date values (current month)
            var today = new Date();
            var firstDay = new Date(today.getFullYear(), today.getMonth(), 1);
            
            var fromDateStr = firstDay.toISOString().slice(0, 10);
            var toDateStr = today.toISOString().slice(0, 10);
            
            $('#FromDate').val(fromDateStr);
            $('#ToDate').val(toDateStr);
            
            // Prevent form submission on enter key
            $('#profitLossFilterForm').on('submit', function(e) {
                e.preventDefault();
                return false;
            });
            
            // Reset button handler
            $('#btnReset').click(function() {
                $('#FromDate').val(fromDateStr);
                $('#ToDate').val(toDateStr);
            });
            
            // Show button handler
            $('#btnShow').click(function(e) {
                e.preventDefault();
                openReportInNewTab();
            });
            
            // Export buttons handlers
            $('#btnPDF').click(function(e) {
                e.preventDefault();
                exportToPDF();
            });
            
            $('#btnExcel').click(function(e) {
                e.preventDefault();
                exportToExcel();
            });
        });
        
        function openReportInNewTab() {
            var fromDate = $('#FromDate').val();
            var toDate = $('#ToDate').val();
            
            var url = '@Url.Action("GenerateProfitLossReport", "Kitchen")' +
                '?fromDate=' + encodeURIComponent(fromDate) +
                '&toDate=' + encodeURIComponent(toDate);
                
            window.open(url, '_blank');
        }
        
        function exportToPDF() {
            var fromDate = $('#FromDate').val();
            var toDate = $('#ToDate').val();
            
            var url = '@Url.Action("ExportProfitLossReportToPDF", "Kitchen")' +
                '?fromDate=' + encodeURIComponent(fromDate) +
                '&toDate=' + encodeURIComponent(toDate);
                
            window.location.href = url;
        }
        
        function exportToExcel() {
            var fromDate = $('#FromDate').val();
            var toDate = $('#ToDate').val();
            
            var url = '@Url.Action("ExportProfitLossReportToExcel", "Kitchen")' +
                '?fromDate=' + encodeURIComponent(fromDate) +
                '&toDate=' + encodeURIComponent(toDate);
                
            window.location.href = url;
        }
    </script>
} 