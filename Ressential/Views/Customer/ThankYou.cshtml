@using Ressential.Models
@{
    ViewBag.Title = "Thank You";
    Layout = "~/Views/Shared/CustomerLayout.cshtml";
}

<div class="hero-wrap hero-bread" style="background-image: url('/Content/CustomerAssets/images/BG4.jpg');">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <h1 style="font-size: 48px; font-weight: bold; color: #fff; text-align: center; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); margin: 20px 0;">Thank You for Your Order!</h1>
                <p style="color: #fff; font-size: 18px;">Your order has been placed successfully. Below are your order details:</p>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section ftco-cart">
    <div class="container">
        <div class="row">
            <div class="col-md-12 ftco-animate">
                <div class="cart-list">
                    <table class="table">
                        <thead class="thead-primary">
                            <tr class="text-center">
                                <th>Product Name</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.OrderItems != null)
                            {
                                foreach (var item in ViewBag.OrderItems as List<Cart>)
                                {
                                    <tr class="text-center">
                                        <td class="product-name">
                                            <h3>@item.ProductName</h3>
                                        </td>
                                        <td class="price">Rs @item.Price</td>
                                        <td class="quantity">@item.Quantity</td>
                                        <td class="total">Rs @item.TotalPrice</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row justify-content-end">
            <div class="col-lg-4 mt-5 cart-wrap ftco-animate">
                <div class="cart-total mb-3">
                    <h3>Order Summary</h3>
                    <p class="d-flex">
                        <span>Subtotal</span>
                        <span>Rs @ViewBag.Subtotal.ToString("0.00")</span>
                    </p>
                    <p class="d-flex">
                        <span>Delivery Charges</span>
                        <span>Rs @ViewBag.DeliveryCharges.ToString("0.00")</span>
                    </p>
                    <hr>
                    <p class="d-flex total-price">
                        <span>Total</span>
                        <span>Rs @ViewBag.TotalAmount.ToString("0.00")</span>
                    </p>
                </div>
                <p class="text-center"><a href="@Url.Action("BackToHome", "Customer")" class="btn btn-primary py-3 px-4">Back to Home</a></p>
            </div>
        </div>
    </div>
</section>
