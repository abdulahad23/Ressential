@model Ressential.Models.Customer

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Edit Account | Restaurant Portal</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">

    <!-- Google Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/CustomerAssets/css/style2.css">

    <!-- Custom Styles -->
    <style>
        body, html {
            height: 100%;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f8f9fa;
            font-family: 'Roboto', sans-serif;
        }

        .auth-card {
            width: 100%;
            max-width: 600px;
            background: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 2rem;
        }

        .form-floating input {
            height: 50px;
        }

        .form-floating {
            margin-bottom: 1rem;
        }

        .btn {
            padding: 0.75rem;
            font-size: 1rem;
        }
    </style>
</head>
<body>
    <div class="auth-card">
        <div class="card-body">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    <i class="fa fa-exclamation-triangle pe-3" aria-hidden="true"></i>
                    @TempData["ErrorMessage"]
                </div>
            }
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    <i class="fa fa-check pe-3" aria-hidden="true"></i>
                    @TempData["SuccessMessage"]
                </div>
            }

            <div class="text-center mb-4">
                <a href="#">
                    <img src="~/Content/assets/images/logo/ressential-logo.png" alt="Restaurant Logo" width="150">
                </a>
            </div>

            <form method="post" action="/Customer/EditAccount">
                <!-- Hidden field for CustomerId -->
                <input type="hidden" name="CustomerId" value="@Model.CustomerId" />

                <!-- Two Fields Per Row -->
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="customerName" name="CustomerName" value="@Model.CustomerName" placeholder="Full Name" required>
                            <label for="customerName">Full Name</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="contactNo" name="ContactNo" value="@Model.ContactNo" placeholder="Contact Number" required>
                            <label for="contactNo">Contact Number</label>
                        </div>
                    </div>
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input type="email" class="form-control" id="email" name="Email" value="@Model.Email" placeholder="Email Address" readonly>
                            <label for="email">Email Address (Read-only)</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input type="password" class="form-control" id="password" name="Password" placeholder="Password" required>
                            <label for="password">Password</label>
                        </div>
                    </div>
                </div>

                <div class="row g-3">
                    <div class="col-md-12">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="address" name="Address" value="@Model.Address" placeholder="Address">
                            <label for="address">Address</label>
                        </div>
                    </div>
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="country" name="Country" value="@Model.Country" placeholder="Country">
                            <label for="country">Country</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="city" name="City" value="@Model.City" placeholder="City">
                            <label for="city">City</label>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-secondary w-100">Save Changes</button>
            </form>
        </div>
    </div>
</body>
</html>
