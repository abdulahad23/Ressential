@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login | Restaurant Portal</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">

    <!-- Google Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Content/assets/css/plugins/bootstrap.min.css">
    <!-- Feather Icons -->
    <link rel="stylesheet" href="~/Content/assets/fonts/feather.css">
    <!-- Custom Fonts -->
    <link rel="stylesheet" href="~/Content/assets/fonts/tabler-icons.min.css">
    <link rel="stylesheet" href="~/Content/CustomerAssets/css/style2.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

</head>
<body>
    <div class="auth-wrapper">
        <div class="auth-card p-4">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    <i class="fa fa-exclamation-triangle pe-3" aria-hidden="true"> </i>
                    @TempData["ErrorMessage"]
                </div>
            }
            <div class="text-center mb-4">
                <a href="#">
                    <img src="~/Content/assets/images/logo/ressential-logo.png" alt="Restaurant Logo" width="200">
                </a>
            </div>
            <div class="text-center">
                <p class="text-muted">Get your favourite food with ease and enjoy.</p>
            </div>
            <form method="post" action="/Customer/Login" class="mt-4">
                <div class="form-floating mb-3">
                    <input type="email" class="form-control" id="email" name="email" placeholder="Email address" required>
                    <label for="email">Email address</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                    <label for="password">Password</label>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="rememberMe">
                        <label class="form-check-label" for="rememberMe">Remember me</label>
                    </div>
                    <a href="#" class="text-secondary">Forgot Password?</a>
                </div>
                <button type="submit" class="btn btn-secondary w-100">Sign In</button>
            </form>
            <hr class="my-4">
            <p class="text-center">
                Don't have an account?
                <a href="/Account/Register" class="text-secondary">Sign up</a>
            </p>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="~/Content/assets/js/plugins/bootstrap.min.js"></script>
    <script src="~/Content/assets/js/plugins/popper.min.js"></script>
</body>
</html>
