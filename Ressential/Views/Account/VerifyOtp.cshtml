<!DOCTYPE html>
<html lang="en">
<head>
    <title>Verify OTP | Ressentail</title>
    <!-- [Meta] -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Verify OTP for Ressentail Portal.">
    <meta name="keywords" content="Verify OTP, Restaurant Portal, Login">
    <meta name="author" content="codedthemes">

    <!-- [Favicon] -->
    <link rel="icon" href="~/Content/assets/images/favicon.svg" type="image/x-icon">
    <!-- [Google Fonts] -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap">
    <!-- [Icons and Styles] -->
    <link rel="stylesheet" href="~/Content/assets/fonts/tabler-icons.min.css">
    <link rel="stylesheet" href="~/Content/assets/fonts/feather.css">
    <link rel="stylesheet" href="~/Content/assets/fonts/fontawesome.css">
    <link rel="stylesheet" href="~/Content/assets/fonts/material.css">
    <link rel="stylesheet" href="~/Content/assets/css/style.css" id="main-style-link">
    <link rel="stylesheet" href="~/Content/assets/css/style-preset.css">

</head>
<body>
    <!-- [ Pre-loader ] -->
    <div class="loader-bg">
        <div class="loader-track">
            <div class="loader-fill"></div>
        </div>
    </div>

    <div class="auth-main">
        <div class="auth-wrapper v3">
            <div class="auth-form">
                <div class="card my-5">
                    <div class="card-body">
                        <!-- Logo -->
                        <a href="#" class="d-flex justify-content-center">
                            <img src="~/Content/assets/images/logo/ressential-logo.png" width="200" />
                        </a>
                        <!-- Header -->
                        <div class="row">
                            <div class="d-flex justify-content-center">
                                <div class="auth-header">
                                    <h2 class="text-secondary mt-2"><b>Verify Your OTP</b></h2>
                                    <p class="f-16 mt-2">Enter the OTP sent to your email to continue.</p>
                                </div>
                            </div>
                        </div>
                        <!-- Alert -->
                        @if (TempData["ErrorMessage"] != null)
                        {
                    <div class="alert alert-danger">
                        <i class="fa fa-exclamation-triangle pe-3" aria-hidden="true"> </i>
                        @TempData["ErrorMessage"]
                    </div>}
                        @if (TempData["SuccessMessage"] != null)
                        {
                    <div class="alert alert-success">
                        @TempData["SuccessMessage"]
                    </div>}
                        @if (TempData["Message"] != null)
                        {
                    <div class="alert alert-warning">
                        <i class="fa fa-exclamation-circle pe-2" aria-hidden="true"></i>
                        @TempData["Message"]
                    </div>}
                        <!-- OTP Form -->
                        <form method="post" action="/Account/VerifyOtp">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" name="otp" id="floatingOtp" placeholder="Enter OTP" required>
                                <label for="floatingOtp">Enter OTP</label>
                            </div>
                            <div class="d-grid mt-4">
                                <button type="submit" class="btn btn-secondary">Verify OTP</button>
                            </div>
                        </form>
                        <hr class="my-4">
                        <!-- Resend Link -->
                        <p class="text-center">
                            Didn't receive the OTP?
                            <a href="/Account/ForgotPassword" class="text-secondary">Resend OTP</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Required Js -->
    <script src="~/Content/assets/js/plugins/popper.min.js"></script>
    <script src="~/Content/assets/js/plugins/simplebar.min.js"></script>
    <script src="~/Content/assets/js/plugins/bootstrap.min.js"></script>
    <script src="~/Content/assets/js/fonts/custom-font.js"></script>
    <script src="~/Content/assets/js/pcoded.js"></script>
    <script src="~/Content/assets/js/plugins/feather.min.js"></script>
    <script>layout_change('light');</script>
    <script>font_change("Roboto");</script>
    <script>change_box_container('false');</script>
    <script>layout_caption_change('true');</script>
    <script>layout_rtl_change('false');</script>
    <script>preset_change("preset-5");</script>
    <script src="~/Content/assets/js/pcoded.js"></script>
</body>
</html>
