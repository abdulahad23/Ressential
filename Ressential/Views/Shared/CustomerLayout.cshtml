    <script>
    $(document).ready(function () {
        const modal = $('#branchModal');
        const dropdown = $('#branchDropdown');
        const confirmButton = $('#confirmBranchButton');
        const closeModalButton = $('#closeBranchModal');

         // Check if modal should be shown on page load
        @if (Session["BranchId"] == null)
        {
            <text>
            modal.addClass('show');
            $('body').addClass('modal-open');
            populateBranches(); // Populate dropdown when modal is initially opened
            </text>
        }

        // Function to fetch branches and populate the dropdown
        function populateBranches(selectedBranchId = null) {
            $.getJSON('@Url.Action("GetBranches", "Customer")', function (data) {
                dropdown.empty();
                data.forEach(branch => {
                    const option = new Option(branch.BranchName, branch.BranchId);
                    if (branch.BranchId === selectedBranchId) {
                        option.selected = true; // Pre-select branch if it matches the current session branch
                    }
                    dropdown.append(option);
                });
            });
        }

        // Show modal and populate dropdown when the "Select Branch" button is clicked
        $('#selectBranchButton').click(function (e) {
            e.preventDefault();
            modal.addClass('show');
            $('body').addClass('modal-open');
            populateBranches(@Session["BranchId"]); // Pass the current branch ID from the session
        });

        // Confirm branch selection
        confirmButton.click(function () {
            const selectedBranchId = dropdown.val();
            const selectedBranchName = dropdown.find('option:selected').text();

            // Send the selected branch to the backend to update the session
            $.post('@Url.Action("SetBranch", "Customer")',
                { BranchId: selectedBranchId, BranchName: selectedBranchName },
                function (response) {
                    if (response.success) {
                        // Update the branch name in the navigation bar
                        $('#selectBranchButton').text(selectedBranchName);
                        modal.removeClass('show');
                        $('body').removeClass('modal-open');
                        location.reload();
                    } else {
                        alert('Failed to update branch. Please try again.');
                    }
                }
            ).fail(function () {
                alert('An error occurred while setting the branch.');
            });
        });

        // Close modal when the close button is clicked
        closeModalButton.click(function () {
            modal.removeClass('show');
            $('body').removeClass('modal-open');
        });

        // Close modal when clicking outside the modal content
        $(window).click(function (e) {
            if ($(e.target).is(modal)) {
                modal.removeClass('show');
                $('body').removeClass('modal-open');
            }
        });
    });
    </script>

