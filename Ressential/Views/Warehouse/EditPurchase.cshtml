                            <div class="form-floating mb-3 mt-3">
                                @Html.TextBoxFor(model => model.PurchaseDate, Model.PurchaseDate.ToString("yyyy-MM-dd"), new { @class = "form-control", @placeholder = "Purchase Date", @type = "date" })
