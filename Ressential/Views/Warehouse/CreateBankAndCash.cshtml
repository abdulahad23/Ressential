
@{
    ViewBag.Title = "CreateBankAndCash";
    Layout = "~/Views/Shared/_WarehouseLayout.cshtml";
}


<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h2 class="text-secondary"><b>Create Bank & Cash</b></h2>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3 mt-3">
                            <select class="form-control" id="AccountType" name="">
                                <option selected value="0">Select Account Type</option>
                                <option value="1">Bank</option>
                                <option value="1">Cash</option>



                            </select>
                            <label for="floatingInput">Account Type</label>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3 mt-3">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Account Name">
                            <label for="floatingInput">Account Name</label>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3 mt-3">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Bank Name">
                            <label for="floatingInput">Bank Name</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3 mt-3">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Account Number">
                            <label for="floatingInput">Account Number</label>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-floating mb-3 mt-3">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Description">
                            <label for="floatingInput">Description</label>
                        </div>
                    </div>


                    <div class="row mt-3">
                        <div class=" row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <div class="col-sm-9">
                                        <button type="submit" class="btn btn-secondary mr-2 ps-4 pe-4">Save</button>
                                        <button class="btn btn-light ms-1 ps-4 pe-4">Cancel</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>
</div>



