@model Ressential.ViewModels.DashboardViewModel
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_WarehouseLayout.cshtml";
}

<!-- [ Main Content ] start -->
<div class="row">
    <!-- [ Summary Cards ] start -->
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-box-seam-fill f-22 text-primary me-3"></i>
                                <div>
                                    <h5 class="mb-1">Total Items</h5>
                                    <p class="text-muted mb-0" style="font-size: 0.9rem;">Items in inventory</p>
                                </div>
                            </div>
                            <div class="text-end">
                                <h2 class="mb-0 text-primary fw-bold">@Model.TotalItems</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-people-fill f-22 text-success me-3"></i>
                                <div>
                                    <h5 class="mb-1">Total Vendors</h5>
                                    <p class="text-muted mb-0" style="font-size: 0.9rem;">Active vendors</p>
                                </div>
                            </div>
                            <div class="text-end">
                                <h2 class="mb-0 text-success fw-bold">@Model.TotalVendors</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-building f-22 text-warning me-3"></i>
                                <div>
                                    <h5 class="mb-1">Total Branches</h5>
                                    <p class="text-muted mb-0" style="font-size: 0.9rem;">Active branches</p>
                                </div>
                            </div>
                            <div class="text-end">
                                <h2 class="mb-0 text-warning fw-bold">@Model.TotalBranches</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-users f-22 text-danger me-3"></i>
                                <div>
                                    <h5 class="mb-1">Total Users</h5>
                                    <p class="text-muted mb-0" style="font-size: 0.9rem;">Active system users</p>
                                </div>
                            </div>
                            <div class="text-end">
                                <h2 class="mb-0 text-danger fw-bold">@Model.TotalUsers</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- [ Summary Cards ] end -->

    <!-- [ Navigation Shortcuts ] start -->
    <div class="col-sm-12 mb-4">
        <div class="card">
            <div class="card-header pb-0">
                <h5 class="mb-3">
                    <i class="fas fa-bolt text-warning me-2"></i>
                    Quick Actions
                </h5>
                <p class="text-muted mb-3" style="font-size: 0.9rem;">Frequently used actions for quick access</p>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-3">
                        <a href="@Url.Action("CreateRequisitionIssue", "Warehouse")" class="text-decoration-none">
                            <div class="card action-card bg-light-primary border-0 h-100" style="transition: transform 0.2s ease;">
                                <div class="card-body p-4">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar avatar-xl bg-primary bg-opacity-25 mb-0">
                                            <i class="fas fa-truck-loading f-22 text-primary"></i>
                                        </div>
                                        <div class="ms-3">
                                            <h5 class="mb-1 text-primary">Create Issue</h5>
                                            <p class="text-muted mb-0" style="font-size: 0.9rem;">Issue items to branches</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="action-footer bg-primary bg-opacity-10 py-2 px-4">
                                    <small class="text-primary">
                                        <i class="fas fa-arrow-right me-1"></i>
                                        Create New Issue
                                    </small>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="@Url.Action("CreatePurchase", "Warehouse")" class="text-decoration-none">
                            <div class="card action-card bg-light-success border-0 h-100" style="transition: transform 0.2s ease;">
                                <div class="card-body p-4">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar avatar-xl bg-success bg-opacity-25 mb-0">
                                            <i class="fas fa-shopping-cart f-22 text-success"></i>
                                        </div>
                                        <div class="ms-3">
                                            <h5 class="mb-1 text-success">Create Purchase</h5>
                                            <p class="text-muted mb-0" style="font-size: 0.9rem;">Purchase from vendors</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="action-footer bg-success bg-opacity-10 py-2 px-4">
                                    <small class="text-success">
                                        <i class="fas fa-arrow-right me-1"></i>
                                        Create New Purchase
                                    </small>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="@Url.Action("CreatePaymentVoucher", "Warehouse")" class="text-decoration-none">
                            <div class="card action-card bg-light-warning border-0 h-100" style="transition: transform 0.2s ease;">
                                <div class="card-body p-4">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar avatar-xl bg-warning bg-opacity-25 mb-0">
                                            <i class="fas fa-file-invoice-dollar f-22 text-warning"></i>
                                        </div>
                                        <div class="ms-3">
                                            <h5 class="mb-1 text-warning">Payment Voucher</h5>
                                            <p class="text-muted mb-0" style="font-size: 0.9rem;">Create payment voucher</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="action-footer bg-warning bg-opacity-10 py-2 px-4">
                                    <small class="text-warning">
                                        <i class="fas fa-arrow-right me-1"></i>
                                        Create New Payment
                                    </small>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="@Url.Action("CreateReceiptVoucher", "Warehouse")" class="text-decoration-none">
                            <div class="card action-card bg-light-danger border-0 h-100" style="transition: transform 0.2s ease;">
                                <div class="card-body p-4">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar avatar-xl bg-danger bg-opacity-25 mb-0">
                                            <i class="fas fa-receipt f-22 text-danger"></i>
                                        </div>
                                        <div class="ms-3">
                                            <h5 class="mb-1 text-danger">Receipt Voucher</h5>
                                            <p class="text-muted mb-0" style="font-size: 0.9rem;">Create receipt voucher</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="action-footer bg-danger bg-opacity-10 py-2 px-4">
                                    <small class="text-danger">
                                        <i class="fas fa-arrow-right me-1"></i>
                                        Create New Receipt
                                    </small>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- [ Navigation Shortcuts ] end -->

    <style>
        .action-card {
            box-shadow: 0 2px 6px rgba(0,0,0,.08);
        }
        .action-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 12px rgba(0,0,0,.12);
        }
        .avatar {
            width: 48px;
            height: 48px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 12px;
        }
        .action-footer {
            border-top: 1px solid rgba(0,0,0,.05);
        }
    </style>

    <!-- [ Analytics Cards ] start -->
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5>Warehouse Analytics</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-6 mb-4">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="avtar avtar-s bg-light-warning">
                                    <i class="fas fa-exclamation-triangle f-20"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="mb-0">Low Stock Items</h6>
                                <p class="text-muted mb-0">@Model.LowStockItems items below minimum quantity</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 mb-4">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="avtar avtar-s bg-light-primary">
                                    <i class="fas fa-truck-loading f-20"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="mb-0">Pending Receivings</h6>
                                <p class="text-muted mb-0">@Model.ReturnedStocks returns awaiting receiving</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 mb-4">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="avtar avtar-s bg-light-success">
                                    <i class="fas fa-check-circle f-20"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="mb-0">Completed Issues</h6>
                                <p class="text-muted mb-0">@Model.CompletedIssues issues completed</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 mb-4">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="avtar avtar-s bg-light-info">
                                    <i class="fas fa-undo f-20"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="mb-0">Stock Returns</h6>
                                <p class="text-muted mb-0">@Model.ReturnedStocks returns processed</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- [ Top Items Table ] start -->
                <div class="mt-4">
                    <h6 class="mb-3">Top Items by Value</h6>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Item Name</th>
                                    <th>Quantity</th>
                                    <th>Value</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.TopItems)
                                {
                                    <tr>
                                        <td>@item.ItemName</td>
                                        <td>@item.Quantity</td>
                                        <td>Rs. @item.Value.ToString("N0")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- [ Top Items Table ] end -->
            </div>
        </div>
    </div>
    <!-- [ Analytics Cards ] end -->

    <!-- [ Recent Activities ] start -->
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Recent Activities</h5>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    @foreach (var activity in Model.RecentActivities)
                    {
                        <li class="list-group-item px-0">
                            <div class="d-flex align-items-start">
                                <div class="flex-shrink-0">
                                    @{
                                        string iconClass;
                                        switch (activity.ActivityType)
                                        {
                                            case "Purchase":
                                                iconClass = "fas fa-shopping-cart text-primary";
                                                break;
                                            case "Requisition":
                                                iconClass = "fas fa-file-alt text-warning";
                                                break;
                                            case "Issue":
                                                iconClass = "fas fa-truck text-success";
                                                break;
                                            default:
                                                iconClass = "fas fa-info-circle text-info";
                                                break;
                                        }
                                    }
                                    <i class="@iconClass f-20"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="mb-1">@activity.Description</h6>
                                    <p class="text-muted mb-0">
                                        <small>@activity.Timestamp.ToString("MMM dd, yyyy")</small>
                                        @if (activity.ActivityType != "Purchase")
                                        {
                                            <span class="badge bg-light-@(activity.Status.ToLower() == "completed" ? "success" : "warning") text-capitalize ms-2">
                                                @activity.Status
                                            </span>
                                        }
                                    </p>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <!-- [ Recent Activities ] end -->
</div>
<!-- [ Main Content ] end -->

@section Scripts {
    <script src="~/Content/assets/js/plugins/apexcharts.min.js"></script>
}



