@model IEnumerable<Ressential.Models.RequisitionReportViewModel>
@{
    ViewBag.Title = "Requisition Report";
    Layout = "~/Views/Shared/_WarehouseLayout.cshtml";
}

<div class="container-fluid py-4">
    <!-- Page Heading with Breadcrumb -->
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Warehouse")">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Requisition Report</li>
                </ol>
            </nav>
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-body d-flex align-items-center py-3">
                    <div class="bg-primary p-3 me-3 rounded-circle">
                        <i class="fas fa-clipboard-list text-white fa-2x"></i>
                    </div>
                    <div>
                        <h2 class="mb-1 text-primary fw-bold">Requisition Report</h2>
                        <p class="text-muted mb-0">Generate detailed reports for requisitions from branches</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Section with Enhanced UI -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-filter me-2"></i>Report Filters</h5>
                </div>
                <div class="card-body">
                    <form id="requisitionFilterForm">
                        <div class="row g-3">
                            <div class="col-md-6 col-lg-3">
                                <div class="form-group">
                                    <label for="BranchId" class="form-label fw-bold">
                                        <i class="fas fa-building me-1 text-primary"></i>Branch
                                    </label>
                                    <select id="BranchId" name="BranchId" class="form-select">
                                        <option value="0">All Branches</option>
                                        @foreach (var branch in ViewBag.Branches)
                                        {
                                            <option value="@branch.Value">@branch.Text</option>
                                        }
                                    </select>
                                    <div class="form-text">Select a specific branch or all branches</div>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-3">
                                <div class="form-group">
                                    <label for="FromDate" class="form-label fw-bold">
                                        <i class="fas fa-calendar-alt me-1 text-primary"></i>From Date
                                    </label>
                                    <input type="date" id="FromDate" name="FromDate" class="form-control" />
                                    <div class="form-text">Start date for report period</div>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-3">
                                <div class="form-group">
                                    <label for="ToDate" class="form-label fw-bold">
                                        <i class="fas fa-calendar-alt me-1 text-primary"></i>To Date
                                    </label>
                                    <input type="date" id="ToDate" name="ToDate" class="form-control" />
                                    <div class="form-text">End date for report period</div>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-3">
                                <div class="form-group">
                                    <label for="Status" class="form-label fw-bold">
                                        <i class="fas fa-tasks me-1 text-primary"></i>Status
                                    </label>
                                    <select id="Status" name="Status" class="form-select">
                                        <option value="0">All Status</option>
                                        <option value="Pending">Pending</option>
                                        <option value="Settled">Settled</option>
                                        <option value="Partially Settled">Partially Settled</option>
                                        <option value="Rejected">Rejected</option>
                                    </select>
                                    <div class="form-text">Filter by requisition status</div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Report Type Selection -->
                        <div class="row mt-3">
                            <div class="col-12">
                                <div class="card border-light">
                                    <div class="card-header bg-light">
                                        <h6 class="mb-0"><i class="fas fa-file-alt me-2"></i>Report Type</h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="ReportType" id="summaryReport" value="summary" checked>
                                            <label class="form-check-label" for="summaryReport">
                                                <i class="me-1 text-primary"></i> Summary Report
                                            </label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="ReportType" id="detailReport" value="detail">
                                            <label class="form-check-label" for="detailReport">
                                                <i class="me-1 text-primary"></i> Detailed Report
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Action Buttons in filter section -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="d-flex justify-content-end">
                                    <button type="button" class="btn btn-light me-2" id="btnReset">
                                        <i class="fas fa-undo me-1"></i> Reset
                                    </button>
                                    <div class="btn-group me-2">
                                        <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="fas fa-download me-1"></i> Export
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li><button id="btnPDF" class="dropdown-item" type="button"><i class="fas fa-file-pdf text-danger me-2"></i>Export to PDF</button></li>
                                            <li><button id="btnExcel" class="dropdown-item" type="button"><i class="fas fa-file-excel text-success me-2"></i>Export to Excel</button></li>
                                        </ul>
                                    </div>
                                    <button type="button" class="btn btn-secondary" id="btnShow">
                                        <i class="fas fa-eye me-1"></i> Show
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions Card -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Report Information</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info mb-0">
                        <i class="fas fa-lightbulb me-2"></i>
                        <span>The Requisition Report shows all requisitions created by branches. Summary view shows requisition header information, while Detail view includes all items requested in each requisition.</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Set default date values (current month)
            var today = new Date();
            var firstDay = new Date(today.getFullYear(), today.getMonth(), 1);
            
            var fromDateStr = firstDay.toISOString().slice(0, 10);
            var toDateStr = today.toISOString().slice(0, 10);
            
            $('#FromDate').val(fromDateStr);
            $('#ToDate').val(toDateStr);
            
            // Prevent form submission on enter key
            $('#requisitionFilterForm').on('submit', function(e) {
                e.preventDefault();
                return false;
            });
            
            // Button click handlers
            $('#btnShow').click(function(e) {
                e.preventDefault();
                openReportInNewTab();
            });

            $('#btnPDF').click(function(e) {
                e.preventDefault();
                exportToPDF();
            });

            $('#btnExcel').click(function(e) {
                e.preventDefault();
                exportToExcel();
            });
            
            $('#btnReset').click(function() {
                $('#BranchId').val('0');
                $('#Status').val('0');
                $('#FromDate').val(fromDateStr);
                $('#ToDate').val(toDateStr);
                $('#summaryReport').prop('checked', true);
            });
        });

        function openReportInNewTab() {
            var branchId = $('#BranchId').val();
            var fromDate = $('#FromDate').val();
            var toDate = $('#ToDate').val();
            var status = $('#Status').val();
            var reportType = $('input[name="ReportType"]:checked').val();

            // Validate dates
            if (fromDate && toDate && new Date(fromDate) > new Date(toDate)) {
                alert('From Date cannot be greater than To Date');
                return;
            }

            // Construct the URL with query parameters
            var url = '@Url.Action("GenerateRequisitionReport", "Warehouse")' +
                '?branchId=' + encodeURIComponent(branchId) +
                '&fromDate=' + encodeURIComponent(fromDate) +
                '&toDate=' + encodeURIComponent(toDate) +
                '&status=' + encodeURIComponent(status) +
                '&reportType=' + encodeURIComponent(reportType);

            // Open the URL in a new tab
            window.open(url, '_blank');
        }

        function exportToPDF() {
            var branchId = $('#BranchId').val();
            var fromDate = $('#FromDate').val();
            var toDate = $('#ToDate').val();
            var status = $('#Status').val();
            var reportType = $('input[name="ReportType"]:checked').val();

            // Validate dates
            if (fromDate && toDate && new Date(fromDate) > new Date(toDate)) {
                alert('From Date cannot be greater than To Date');
                return;
            }

            // Construct the URL with query parameters
            var url = '@Url.Action("ExportRequisitionReportToPDF", "Warehouse")' +
                '?branchId=' + encodeURIComponent(branchId) +
                '&fromDate=' + encodeURIComponent(fromDate) +
                '&toDate=' + encodeURIComponent(toDate) +
                '&status=' + encodeURIComponent(status) +
                '&reportType=' + encodeURIComponent(reportType);

            // Redirect to the export URL
            window.location.href = url;
        }
        
        function exportToExcel() {
            var branchId = $('#BranchId').val();
            var fromDate = $('#FromDate').val();
            var toDate = $('#ToDate').val();
            var status = $('#Status').val();
            var reportType = $('input[name="ReportType"]:checked').val();

            // Validate dates
            if (fromDate && toDate && new Date(fromDate) > new Date(toDate)) {
                alert('From Date cannot be greater than To Date');
                return;
            }

            // Construct the URL with query parameters
            var url = '@Url.Action("ExportRequisitionReportToExcel", "Warehouse")' +
                '?branchId=' + encodeURIComponent(branchId) +
                '&fromDate=' + encodeURIComponent(fromDate) +
                '&toDate=' + encodeURIComponent(toDate) +
                '&status=' + encodeURIComponent(status) +
                '&reportType=' + encodeURIComponent(reportType);

            // Redirect to the export URL
            window.location.href = url;
        }
    </script>
} 