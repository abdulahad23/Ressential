@model Ressential.Models.Vendor

@{
    ViewBag.Title = "CreateVendor";
    Layout = "~/Views/Shared/_WarehouseLayout.cshtml";
}

@using (Html.BeginForm("CreateVendor", "Warehouse", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-12 grid-margin">
            <div class="card">
                <div class="card-body">
                    <h2 class="text-secondary"><b>Create Vendor</b></h2>

                    @if (TempData["DuplicateWarning"] != null)
                    {
                        <div class="alert alert-warning" role="alert">
                            @TempData["DuplicateWarning"]
                            <div class="mt-2">
                                <button type="submit" class="btn btn-warning" name="confirmDuplicate" value="true">Yes, Create Anyway</button>
                                <a href="@Url.Action("VendorList","Warehouse")" class="btn btn-light">No, Cancel</a>
                            </div>
                        </div>
                    }

                    @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ContainsKey(""))
                    {
                        <div class="alert alert-danger">
                            @Html.ValidationSummary(true)
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating mb-3 mt-3">
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Name" })
                                <label for="floatingInput">Name</label>
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3 mt-3">
                                @Html.TextBoxFor(model => model.CompanyName, new { @class = "form-control", @placeholder = "Company Name" })
                                <label for="floatingInput">Company Name</label>
                                @Html.ValidationMessageFor(model => model.CompanyName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3 mt-3">
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Email", @type = "email" })
                                <label for="floatingInput">Email</label>
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3 mt-3">
                                @Html.TextBoxFor(model => model.Contact, new { @class = "form-control", @placeholder = "Contact" })
                                <label for="floatingInput">Contact</label>
                                @Html.ValidationMessageFor(model => model.Contact, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3 mt-3">
                                @Html.TextBoxFor(model => model.Address, new { @class = "form-control", @placeholder = "Address" })
                                <label for="floatingInput">Address</label>
                                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3 mt-3">
                                @Html.TextBoxFor(model => model.City, new { @class = "form-control", @placeholder = "City" })
                                <label for="floatingInput">City</label>
                                @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3 mt-3">
                                @Html.TextBoxFor(model => model.Country, new { @class = "form-control", @placeholder = "Country" })
                                <label for="floatingInput">Country</label>
                                @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3 mt-3">
                                @Html.TextBoxFor(model => model.PostalCode, new { @class = "form-control", @placeholder = "Postal Code" })
                                <label for="floatingInput">Postal Code</label>
                                @Html.ValidationMessageFor(model => model.PostalCode, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="col-sm-9">
                                            @if (TempData["DuplicateWarning"] == null)
                                            {
                                                <button type="submit" class="btn btn-secondary mr-2 ps-4 pe-4">Save</button>
                                                <a href="@Url.Action("VendorList", "Warehouse")" class="btn btn-light ms-1 ps-4 pe-4">Cancel</a>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $('form').validate();
            
            @if (TempData["PendingVendor"] != null)
            {
                <text>
                // Parse the JSON data and restore form values
                var pendingData = JSON.parse('@Html.Raw(TempData["PendingVendor"])');
                $("#Name").val(pendingData.Name);
                $("#CompanyName").val(pendingData.CompanyName);
                $("#Email").val(pendingData.Email);
                $("#Contact").val(pendingData.Contact);
                $("#Address").val(pendingData.Address);
                $("#City").val(pendingData.City);
                $("#Country").val(pendingData.Country);
                $("#PostalCode").val(pendingData.PostalCode);
                </text>
            }
        });
    </script>
}

